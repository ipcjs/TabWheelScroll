{
  "manifest_version": 2,
  "name": "Tab Wheel Scroll",
  "icons": { "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },
  "version" :"0.2",
  "minimum_chrome_version": "26",
  "description" : "Scroll tabs with alt + mouse wheel OR right click + mouse wheel.",
  "author": "Jonathan Plantey",
  "incognito": "spanning",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
